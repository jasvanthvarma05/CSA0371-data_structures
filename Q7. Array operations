#include <stdio.h>

#define MAX_SIZE 100

void insert(int arr[], int *size, int index, int value) {
    if (*size >= MAX_SIZE) {
        printf("Array is full. Insertion not possible.\n");
        return;
    }

    if (index < 0 || index > *size) {
        printf("Invalid index. Insertion not possible.\n");
        return;
    }

    for (int i = *size - 1; i >= index; i--) {
        arr[i + 1] = arr[i];
    }

    arr[index] = value;
    (*size)++;
}

void delete(int arr[], int *size, int index) {
    if (*size <= 0) {
        printf("Array is empty. Deletion not possible.\n");
        return;
    }

    if (index < 0 || index >= *size) {
        printf("Invalid index. Deletion not possible.\n");
        return;
    }

    for (int i = index; i < *size - 1; i++) {
        arr[i] = arr[i + 1];
    }

    (*size)--;
}

void display(const int arr[], int size) {
    printf("Array elements: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int array[MAX_SIZE];
    int size = 0;
    int choice, index, value;

    while (1) {
        printf("\nArray Operations:\n");
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter index and value to insert: ");
                scanf("%d %d", &index, &value);
                insert(array, &size, index, value);
                break;
            case 2:
                printf("Enter index to delete: ");
                scanf("%d", &index);
                delete(array, &size, index);
                break;
            case 3:
                display(array, size);
                break;
            case 4:
                printf("Exiting...\n");
                return 0;
            default:
                printf("Invalid choice. Please try again.\n");
        }
    }

    return 0;
